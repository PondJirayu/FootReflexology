<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="12dp"
        android:text="กราฟแสดงอาการย้อนหลัง 3 วัน"
        android:textColor="@color/font_black_color"
        android:textSize="16sp" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tvTitle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/graphView"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="แกนแนวตั้งแสดงอาการ 4 ระดับ"
            android:textColor="@color/font_black_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="ระดับ 1 หมายถึง อาการแย่"
            android:textColor="@color/font_black_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="ระดับ 2 หมายถึง อาการทรงตัว"
            android:textColor="@color/font_black_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="ระดับ 3 หมายถึง อาการดีขึ้น"
            android:textColor="@color/font_black_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="ระดับ 4 หมายถึง อาการหายเป็นปกติ"
            android:textColor="@color/font_black_color"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>